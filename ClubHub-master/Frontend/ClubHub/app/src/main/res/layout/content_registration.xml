<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Registration"
    tools:showIn="@layout/activity_registration">

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPassword" />

    <EditText
        android:id="@+id/registrationFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/registrationNetID"
        app:layout_constraintTop_toBottomOf="@+id/registrationNetID" />

    <EditText
        android:id="@+id/registrationNetID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="NetID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationID" />

    <EditText
        android:id="@+id/registrationPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/registrationMajor"
        app:layout_constraintTop_toBottomOf="@+id/registrationMajor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="9dp"
        android:text="@iastate.edu"
        app:layout_constraintBottom_toBottomOf="@+id/registrationNetID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/registrationNetID"
        tools:text="@iastate.edu" />

    <EditText
        android:id="@+id/registrationID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="ID Number"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/registrationNetID"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/registrationLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/registrationFirstName"
        app:layout_constraintTop_toBottomOf="@+id/registrationFirstName" />

    <EditText
        android:id="@+id/registrationClassification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Classification"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/registrationLastName"
        app:layout_constraintTop_toBottomOf="@+id/registrationLastName" />

    <EditText
        android:id="@+id/registrationPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textShortMessage|textPersonName"
        app:layout_constraintStart_toStartOf="@+id/registrationClassification"
        app:layout_constraintTop_toBottomOf="@+id/registrationClassification" />

    <EditText
        android:id="@+id/registrationMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Major"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/registrationPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/registrationPhoneNumber" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="61dp"
        android:text="Registration"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/registrationID"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>